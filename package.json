{
    "private": true,
    "dependencies": {
        "d3": "3.5.17",
        "lodash": "4.17.10",
        "rd3": "0.7.0",
        "react": "15.3.0",
        "react-dom": "15.3.0",
        "todomvc-app-css": "2.1.2"
    },
    "devDependencies": {
        "babel-core": "6.26.3",
        "babel-loader": "7.1.4",
        "babel-plugin-__coverage__": "11.0.0",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-es2016": "6.24.1",
        "babel-preset-react": "6.24.1",
        "babel-preset-stage-2": "6.24.1",
        "chai": "4.1.2",
        "cpy-cli": "1.0.1",
        "css-loader": "0.28.11",
        "eslint": "3.2.2",
        "eslint-config-kentcdodds": "^9.0.0",
        "extract-text-webpack-plugin": "3.0.2",
        "ghooks": "2.0.4",
        "html-webpack-plugin": "3.2.0",
        "http-server": "0.11.1",
        "inline-manifest-webpack-plugin": "3.0.1",
        "karma": "2.0.2",
        "karma-chai": "0.1.0",
        "karma-chrome-launcher": "2.2.0",
        "karma-coverage": "1.1.2",
        "karma-mocha": "1.3.0",
        "karma-webpack": "3.0.0",
        "mocha": "5.1.1",
        "npm-run-all": "4.1.3",
        "offline-plugin": "5.0.3",
        "opt-cli": "1.6.0",
        "progress-bar-webpack-plugin": "1.11.0",
        "rimraf": "2.6.2",
        "style-loader": "0.21.0",
        "surge": "0.20.1",
        "webpack": "3.12.0",
        "webpack-config-utils": "2.3.0",
        "webpack-dev-server": "2.11.2"
    },
    "config": {
        "ghooks": {
            "pre-commit": "opt --in pre-commit --exec \"npm run validate\""
        }
    },
    "scripts": {
        "predeploy": "npm run build",
        "deploy": ".\\scripts\\deploy.cmd",
        "prebuild": "rimraf dist",
        "build": "webpack --env.prod -p",
        "postbuild": "cpy favicon.ico dist",
        "prebuild:dev": "rimraf dist",
        "build:dev": "webpack --env.dev --display-error-details",
        "postbuild:dev": "cpy favicon.ico dist",
        "start": "http-server --silent -c-1 dist",
        "dev": "webpack-dev-server --env.dev --hot",
        "debug": "node-nightly --inspect --debug-brk node_modules/.bin/webpack --env.debug",
        "debug:dev": "npm run debug -- --env.dev",
        "debug:prod": "npm run debug -- --env.prod",
        "test": "karma start",
        "watch:test": "npm test -- --auto-watch --no-single-run",
        "validate": "npm-run-all --parallel lint build test",
        "lint": "eslint ."
    }
}
